<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity"
    android:background="@drawable/backgrounddetailact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/imgDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@android:color/darker_gray"
                android:contentDescription="Photo Tarian" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvDetail_Nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="Nama Tarian"/>
        <TextView
            android:id="@+id/tvDetail_Asal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:text="Asal"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Selayang Pandang"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/orange"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/tvIsi_Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8dp"
                android:layout_margin="4dp"
                android:textSize="16sp"
                android:padding="10dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Detail Tarian"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/birubar"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sumber Referensi"
                android:textColor="@color/black"
                android:shadowColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="@color/birubar"
                android:layout_margin="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="8dp"
                android:text="Share atau bagian informasi ini agar semua orang mengetahui!"
                android:textColor="@color/black"
                android:shadowColor="@color/black"
                android:backgroundTint="@color/birubar"/>

            <Button
                android:id="@+id/btnaction_share"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Share"
                android:textColor="@color/black"
                android:shadowColor="@color/black"
                android:background="@drawable/round_corner"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                tools:ignore="InvalidId" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>